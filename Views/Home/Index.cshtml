@{
    ViewData["Title"] = "Cebolli Sport Y Asociados";
}

<style>
    body {
        background-color: #131313;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        color: #fff;
        min-height: 70vh;
        padding-top: 60px;
    }

    .header-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
        margin-bottom: 60px;
    }

    .logo-container img {
        width: 280px;
        height: auto;
    }

    .main-title {
        font-size: 3.2rem;
        font-weight: bold;
        color: #54ffbb;
        line-height: 1.2;
        text-align: left;
    }

    .cards-container {
        display: flex;
        justify-content: center;
        gap: 45px;
        flex-wrap: wrap;
    }

    .option-card {
        width: 260px;
        height: 220px;
        background: #131313;
        border: 2.5px solid #24bb6a;
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 12px 0px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .option-card:hover {
            box-shadow: 0 0 16px #24bb6a50;
            border-color: #54ffbb;
        }

            .option-card:hover .card-text {
                color: #54ffbb;
            }

    .card-text {
        color: #24bb6a;
        font-size: 1.35rem;
        font-weight: 500;
        margin-bottom: 14px;
        transition: color 0.3s ease;
    }

    a {
        text-decoration: none;
    }

    .card-img {
        width: 80%;
        height: auto;
        object-fit: contain;
    }
</style>

<div class="main-container">
    <!-- Logo y título en fila horizontal -->
    <div class="header-container">
        <div class="logo-container">
            <img src="/img/logoCebolliWheels-removebg-preview.png" alt="Cebolli Wheels Onion Logo">
        </div>
        <div class="main-title">Bienvenidos a<br>CebolliWheels</div>
    </div>

    <!-- Tarjetas -->
    <div class="cards-container">
        <div class="option-card" onclick="window.location='/User/Index';">
            <div class="card-text">Ver lista de Usuarios</div>
            <img class="card-img" src="/img/gente.png" alt="Imagen fondo botón">
        </div>

        <a asp-controller="Orden" asp-action="Crear" class="option-card">
            <div class="card-text">Crear Órden</div>
            <img class="card-img" src="/img/servicio.png" alt="Imagen Orden">
        </a>

        <div class="option-card" onclick="window.location='/Orden/Index';">
            <div class="card-text">Ver Lista de ordenes</div>
            <img class="card-img" src="/img/notas.png" alt="Imagen fondo botón">
        </div>

        <a asp-controller="Facturacion" asp-action="MenuFacturacion" class="option-card">
            <div class="card-text">Ver Facturas</div>
            <img class="card-img" src="/img/notas.png" alt="Imagen Orden">
        </a>
    </div>
</div>